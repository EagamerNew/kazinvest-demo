<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.kazinvest.demo.project.model.AttendanceEntity</class>
        <class>com.kazinvest.demo.project.model.EducationGraphicEntity</class>
        <class>com.kazinvest.demo.project.model.EducationProgramEntity</class>
        <class>com.kazinvest.demo.project.model.LessonEntity</class>
        <class>com.kazinvest.demo.project.model.ManagerEntity</class>
        <class>com.kazinvest.demo.project.model.StudentEntity</class>
        <class>com.kazinvest.demo.project.model.TabulationEntity</class>
        <class>com.kazinvest.demo.project.model.UserSpecEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
